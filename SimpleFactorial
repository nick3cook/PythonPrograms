#Nicholas Cook
#This program uses recursion to calculate the factorial of a number

#main method
def main():
    num = int(input('Enter a non negative integer: '))
    ans = factorial(num)
    print('The factorial of ', num, 'is', ans)

def factorial(number):
    if number == 0:
        return 1
    else:
        return number * factorial(number - 1)

# calls main function
main()
